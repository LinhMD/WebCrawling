<?xml version="1.0" encoding="UTF-8"?>
<Spider id="spider1">
    <SpiderJobs>
        <Visit id="nah">
            <url>https://123job.vn/viec-lam/nhan-vien-phuc-vu-QJDa6Wk69G</url>
            <method>start</method>
        </Visit>
        <CreateModel>
            <ModelClass>job123.Recruitment</ModelClass>
            <method>collect</method>
            <SpiderJobs>
                <Assign>
                    <field>title</field>
                    <SpiderJobs>
                        <ClassName>
                            <className>job-title</className>
                            <method>findOne</method>
                        </ClassName>
                        <GetText/>
                    </SpiderJobs>

                </Assign>
                <Assign>
                    <field>company</field>
                    <SpiderJobs>
                        <ClassName>


                            <className>cpn-title</className>
                            <method>findOne</method>
                        </ClassName>
                        <GetText/>
                    </SpiderJobs>
                </Assign>
                <Assign>
                    <field>description</field>
                    <SpiderJobs>
                        <Select>
                            <cssSelect>div.content-group:contains(Mô tả công việc) > div</cssSelect>
                        </Select>
                        <GetText/>
                    </SpiderJobs>
                </Assign>
                <Assign>
                    <field>requirement</field>
                    <SpiderJobs>
                        <Select>
                            <cssSelect>div.content-group:contains(Yêu cầu công việc) > div</cssSelect>
                        </Select>
                        <GetText/>
                    </SpiderJobs>
                </Assign>
                <Assign>
                    <field>benefit</field>
                    <SpiderJobs>
                        <Select>
                            <cssSelect>div.content-group:contains(Quyền lợi chi tiết) > div</cssSelect>
                        </Select>
                        <GetText/>
                    </SpiderJobs>
                </Assign>
                <Assign>
                    <field>details</field>
                    <SpiderJobs>
                        <CreateModel>
                            <ModelClass>job123.Details</ModelClass>
                            <method>collect</method>
                            <SpiderJobs>
                                <Assign>
                                    <field>workAt</field>
                                    <SpiderJobs>
                                        <Select>
                                            <cssSelect>div.item:contains(Việc làm tại:)</cssSelect>
                                        </Select>
                                        <GetText/>
                                    </SpiderJobs>
                                </Assign>
                                <Assign>
                                    <field>salary</field>
                                    <SpiderJobs>
                                        <Select>
                                            <cssSelect>div.item:contains(Mức lương:)</cssSelect>
                                        </Select>
                                        <GetText/>
                                    </SpiderJobs>
                                </Assign>
                                <Assign>
                                    <field>submissionDeadline</field>
                                    <SpiderJobs>
                                        <Select>
                                            <cssSelect>div.item:contains(Hạn nộp hồ sơ: )</cssSelect>
                                        </Select>
                                        <GetText/>
                                    </SpiderJobs>
                                </Assign>
                                <Assign>
                                    <field>position</field>
                                    <SpiderJobs>
                                        <Select>
                                            <cssSelect>div.item:contains(Chức vụ:)</cssSelect>
                                        </Select>
                                        <GetText/>
                                    </SpiderJobs>
                                </Assign>
                                <Assign>
                                    <field>workType</field>
                                    <SpiderJobs>
                                        <Select>
                                            <cssSelect>div.item:contains(Hình thức:)</cssSelect>
                                        </Select>
                                        <GetText/>
                                    </SpiderJobs>
                                </Assign>
                            </SpiderJobs>
                        </CreateModel>
                    </SpiderJobs>
                </Assign>
            </SpiderJobs>
        </CreateModel>
    </SpiderJobs>
</Spider>
