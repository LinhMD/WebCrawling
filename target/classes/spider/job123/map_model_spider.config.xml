<?xml version="1.0" encoding="UTF-8"?>
<Spider id="MapModel">
    <SpiderJobs>
        <Repeat>
            <interval>10</interval>
            <SpiderJobs>
                <VisitFromUrlQueue>
                    <method>start</method>
                    <queueName>job123</queueName>
                    <urlStartWiths>
                        <url>https://123job.vn/viec-lam</url>
                    </urlStartWiths>
                </VisitFromUrlQueue>
                <CreateMapModel>
                    <modelType>Recruitment</modelType>
                    <method>collect</method>
                    <Keys>
                        <key>title</key>
                        <key>company</key>
                        <key>description</key>
                        <key>requirement</key>
                        <key>benefit</key>
                        <key>address</key>
                        <key>salary</key>
                        <key>submissionDeadline</key>
                        <key>position</key>
                        <key>workType</key>
                    </Keys>
                    
                    <SpiderJobs>
                        <Assign>
                            <field>title</field>
                            <SpiderJobs>
                                <ClassName>
                                    <className>job-title</className>
                                    <method>findOne</method>
                                </ClassName>
                                <GetText/>
                            </SpiderJobs>
                        </Assign>
                        <Assign>
                            <field>company</field>
                            <SpiderJobs>
                                <ClassName>
                                    <className>cpn-title</className>
                                    <method>findOne</method>
                                </ClassName>
                                <GetText/>
                            </SpiderJobs>
                        </Assign>
                        <Assign>
                            <field>description</field>
                            <SpiderJobs>
                                <Select>
                                    <cssSelect>div.content-group:contains(Mô tả công việc) > div</cssSelect>
                                </Select>
                                <GetText/>
                            </SpiderJobs>
                        </Assign>
                        <Assign>
                            <field>requirement</field>
                            <SpiderJobs>
                                <Select>
                                    <cssSelect>div.content-group:contains(Yêu cầu công việc) > div</cssSelect>
                                </Select>
                                <GetText/>
                            </SpiderJobs>
                        </Assign>
                        <Assign>
                            <field>benefit</field>
                            <SpiderJobs>
                                <Select>
                                    <cssSelect>div.content-group:contains(Quyền lợi chi tiết) > div</cssSelect>
                                </Select>
                                <GetText/>
                            </SpiderJobs>
                        </Assign>
                        <Assign>
                            <field>address</field>
                            <SpiderJobs>
                                <Select>
                                    <cssSelect>div.item:contains(Việc làm tại:)</cssSelect>
                                </Select>
                                <GetText/>
                            </SpiderJobs>
                        </Assign>
                        <Assign>
                            <field>salary</field>
                            <SpiderJobs>
                                <Select>
                                    <cssSelect>div.item:contains(Mức lương:)</cssSelect>
                                </Select>
                                <GetText/>
                            </SpiderJobs>
                        </Assign>
                        <Assign>
                            <field>submissionDeadline</field>
                            <SpiderJobs>
                                <Select>
                                    <cssSelect>div.item:contains(Hạn nộp hồ sơ: )</cssSelect>
                                </Select>
                                <GetText/>
                            </SpiderJobs>
                        </Assign>
                        <Assign>
                            <field>position</field>
                            <SpiderJobs>
                                <Select>
                                    <cssSelect>div.item:contains(Chức vụ:)</cssSelect>
                                </Select>
                                <GetText/>
                            </SpiderJobs>
                        </Assign>
                        <Assign>
                            <field>workType</field>
                            <SpiderJobs>
                                <Select>
                                    <cssSelect>div.item:contains(Hình thức:)</cssSelect>
                                </Select>
                                <GetText/>
                            </SpiderJobs>
                        </Assign>
                    </SpiderJobs>
                </CreateMapModel>
                <TransferToResult/>
            </SpiderJobs>
        </Repeat>
    </SpiderJobs>
</Spider>